<script>

$("#divLoading").hide();
var API_BASE_URL = "https://buhogestion.distrocuyo.com/";
    
$('#Ingresar').click(function () {
    var usuario = $('#usuario').val();
    var password = $('#password').val();

    var splitEmail = usuario.split("@@");
    if (splitEmail[1] == "" || splitEmail[1] == null) {
        $.ajax({
            url: API_BASE_URL + "/Ingenieria/Api/Login/GetUsuario",
            type: 'GET',
            data: {
                usuario: usuario,
                password: password
            },
            dataType: 'json',
            success: function (data) {
                if (data > 0) {
                    idUsuario = data;
                    validarIngreso(idUsuario); 
                    $("#divLoading").show();
                } else if (data == -1) {
                    alert("Su usuario se encuentra inhabilitado, para acceder comuníquese con el administrador de sistema");
                } else if (data.Error == -2) {
                    alert("Datos incorrectos quedan " + data.IntentosRestantes + " intentos");
                } else if (data == -3) {
                    alert("Usuario bloqueado, para recuperar su cuenta seleccione Desbloquear Usuario");
                } else {
                    alert("Usuario o Contraseña incorrecto");
                }
                $('#password').val('').change();
            },
            error: function (xhr, textStatus, errorThrown) {
                alert("Error en la solicitud: " + errorThrown);
            }
        });
    } else {
        alert("Escriba nombre de usuario. No se permite e-mail.");
    }
});

 function validarIngreso(idUsuario) {
    $.ajax({
        url: '@Url.Action("ValidarIngreso", "Login", new { area = "Login" })',
        type: 'GET',
        data: {
            idUsuario: idUsuario
        },
        dataType: 'json',
        success: function (data) {
            if (data != 0) {
               window.location.href = '@Url.Action("Index", "Index", new { area = "PerformanceApp" })';
            } else {                
                alert("El usuario no está autorizado.");
            }
        },
        error: function(xhr, textStatus, errorThrown) {
            // Manejar errores de la solicitud AJAX
            console.error("Error en la solicitud: " + errorThrown);
        }
    });
}



</script>