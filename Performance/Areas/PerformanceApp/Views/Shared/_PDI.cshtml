        function CargarDatos() {
    var url = "/PerformanceApp/Api/PerformanceApp/buscarDatosPDI?idUsuario=" + "@idUsuario" + "&idPerformance=" + "@idPerformance";
    $.getJSON(url)
        .done(function (datos) {
            datos.forEach(function (data) {
                $("#datosColaborador").text("Colaborador: " + data.colaborador + "  -  Líder: " + data.lider + "  -  Dominio: " + data.dominio + ".");

                var htmlContent = `
                    <div class="item">
                        <p>-Acción: ${data.acciones}</p>                       
                        <p>Nombre Habilidad: ${data.nombreHabilidad} - Fecha Desde: ${data.fechaDesde} - Fecha Hasta: ${data.fechaHasta} - Avance: ${data.nombreAvance}</p>                       
                        <p>Acciones Realizadas: ${data.accionesRealizadas}</p>
                    </div>
                `;

                if (data.metodologia == 1) {
                    $("#metodologia1").append(htmlContent);
                }
                if (data.metodologia == 2) {
                    $("#metodologia2").append(htmlContent);
                }
                if (data.metodologia == 3) {
                    $("#metodologia3").append(htmlContent);
                }
            });
        });
}

