        function CargarMetodologias() {
            var selectMetodologia = $('#selectMetodologia');
            selectMetodologia.empty();
            selectMetodologia.append($('<option/>', { value: '', text: 'Seleccionar' }).hide());
            var url = "/PerformanceApp/Api/PerformanceApp/ListarMetodologias";
            $.getJSON(url)
                .done(function (data) {
                    console.log(data);
                    $.each(data, function (index, result) {
                        selectMetodologia.append($('<option/>', {
                            value: result.idMetodologia,
                            text: result.nombre
                        }));
                    });
                });
        }
        function CargarAvances() {
            var selectAvance = $('#selectAvance');
            selectAvance.empty();
            selectAvance.append($('<option/>', { value: '', text: 'Seleccionar' }).hide());
            var url = "/PerformanceApp/Api/PerformanceApp/ListarAvances";
            $.getJSON(url)
                .done(function (data) {
                    console.log(data);
                    $.each(data, function (index, result) {
                        selectAvance.append($('<option/>', {
                            value: result.idAvances,
                            text: result.nombre
                        }));
                    });
                });
        }
        function CargarHabilidades() {
            var selectHabilidad = $('#selectHabilidad');
            selectHabilidad.empty();
            selectHabilidad.append($('<option/>', { value: '', text: 'Seleccionar' }).hide());
            var url = "/PerformanceApp/Api/PerformanceApp/ListarHabilidades";
            $.getJSON(url)
                .done(function (data) {
                    console.log(data);
                    $.each(data, function (index, result) {
                        selectHabilidad.append($('<option/>', {
                            value: result.idHabilidad,
                            text: result.habilidad
                        }));
                    });
                });
        }

    //Funcion para que ande el popover
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover();
    });
    //Funcion para que ande el tooltip
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });

